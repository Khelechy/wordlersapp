    <MudStack Class="fixed pa-3" Style="bottom: 0; left:0; width: 100%;" Row="true">
        <MudTextField @bind-Value="TextValue" Label="" Variant="Variant.Outlined" Margin="Margin.Dense"></MudTextField>
        <MudIconButton Icon="@Icons.Material.Filled.Send" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" />
    </MudStack>
</MudStack>

@code {
    string TextValue;

    bool isGameOwner;

    Color Color = Color.Success;
    private void OnScroll(ScrollEventArgs e)
    {
        Color = (e.FirstChildBoundingClientRect.Top * -1) switch
        {
            var x when x < 500 => Color.Primary,
            var x when x < 1500 => Color.Secondary,
            var x when x < 2500 => Color.Tertiary,
            _ => Color.Error
        };
    }

}
